@model demo_duan.Models.Showtime

@{
    ViewData["Title"] = "Create Showtime";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-calendar-plus"></i> Create New Showtime
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="MovieId" class="control-label">
                            <i class="fas fa-film"></i> Movie
                        </label>
                        <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId" required>
                            <option value="">-- Select Movie --</option>
                        </select>
                        <span asp-validation-for="MovieId" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="TheaterId" class="control-label">
                            <i class="fas fa-building"></i> Theater
                        </label>
                        <select asp-for="TheaterId" class="form-control" asp-items="ViewBag.TheaterId" required>
                            <option value="">-- Select Theater --</option>
                        </select>
                        <span asp-validation-for="TheaterId" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Date" class="control-label">
                                    <i class="fas fa-calendar"></i> Date
                                </label>
                                <input asp-for="Date" class="form-control" type="date" required 
                                       min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Time" class="control-label">
                                    <i class="fas fa-clock"></i> Time
                                </label>
                                <input asp-for="Time" class="form-control" type="time" required />
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-4">
                        <label asp-for="AvailableSeats" class="control-label">
                            <i class="fas fa-chair"></i> Available Seats
                        </label>
                        <input asp-for="AvailableSeats" class="form-control" type="number" min="0" max="1000" 
                               placeholder="Leave empty to use theater capacity" />
                        <span asp-validation-for="AvailableSeats" class="text-danger"></span>
                        <small class="form-text text-muted">If left empty, will use the theater's capacity</small>
                    </div>
                    
                    <div class="form-group d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Showtime
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}