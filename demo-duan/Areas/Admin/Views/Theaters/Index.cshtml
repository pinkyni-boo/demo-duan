@model IEnumerable<demo_duan.Models.Theater>
@using demo_duan.Models
@{
    ViewData["Title"] = "Theaters";
}

<div class="container-fluid">
    <h2>Theaters Management</h2>
    
    <div class="row mb-3">
        <div class="col">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Theater
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Capacity</th>
                    <th>Location</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var theater in Model)
                {
                    <tr>
                        <td>@theater.Name</td>
                        <td>@theater.Capacity</td>
                        <td>@(theater.Location ?? "N/A")</td>
                        <td>@(theater.Address ?? "N/A")</td>
                        <td>@(theater.PhoneNumber ?? "N/A")</td>
                        <td>@(theater.Email ?? "N/A")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@theater.Id" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@theater.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@theater.Id" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>