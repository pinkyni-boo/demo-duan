@model demo_duan.Models.Theater
@{
    ViewData["Title"] = "Xóa Rạp chiếu phim";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1 text-danger"><i class="fas fa-trash me-2"></i>Xóa Rạp chiếu phim</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin">Admin</a></li>
                <li class="breadcrumb-item"><a href="/Admin/Theaters">Theaters</a></li>
                <li class="breadcrumb-item active">Delete</li>
            </ol>
        </nav>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Quay lại
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h6 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa rạp chiếu phim
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa rạp chiếu phim này không? 
                    Hành động này không thể hoàn tác.
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Tên rạp:</dt>
                    <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                    <dt class="col-sm-3">Địa chỉ:</dt>
                    <dd class="col-sm-9">@Model.Address</dd>

                    <dt class="col-sm-3">Tổng ghế:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">@Model.TotalCapacity ghế</span>
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <dt class="col-sm-3">Điện thoại:</dt>
                        <dd class="col-sm-9">@Model.Phone</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                    }

                    <dt class="col-sm-3">Trạng thái:</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Tạm đóng</span>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete" method="post" class="d-inline">
                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Xác nhận xóa
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>