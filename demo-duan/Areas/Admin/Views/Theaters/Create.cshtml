@model demo_duan.Models.Theater

@{
    ViewData["Title"] = "Create Theater";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-building"></i> Create New Theater
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label">
                            <i class="fas fa-theater-masks"></i> Theater Name
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Enter theater name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Address" class="control-label">
                            <i class="fas fa-map-marker-alt"></i> Address
                        </label>
                        <textarea asp-for="Address" class="form-control" rows="3" 
                                  placeholder="Enter theater address" required></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Capacity" class="control-label">
                                    <i class="fas fa-chair"></i> Capacity (seats)
                                </label>
                                <input asp-for="Capacity" class="form-control" type="number" min="1" max="1000" 
                                       placeholder="Number of seats" required />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="PhoneNumber" class="control-label">
                                    <i class="fas fa-phone"></i> Phone Number
                                </label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="(028) 1234 5678" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-4">
                        <label asp-for="Email" class="control-label">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="theater@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Theater
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}