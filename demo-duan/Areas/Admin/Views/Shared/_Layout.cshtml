<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="admin-layout">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-arrow-left me-2"></i>Back to Site
                </a>
                <span class="navbar-text ms-3">
                    <i class="fas fa-cogs me-2"></i>Admin Panel
                </span>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Movies" asp-action="Index">
                                <i class="fas fa-film me-1"></i>Movies
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Categories" asp-action="Index">
                                <i class="fas fa-tags me-1"></i>Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Theaters" asp-action="Index">
                                <i class="fas fa-building me-1"></i>Theaters
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Showtimes" asp-action="Index">
                                <i class="fas fa-clock me-1"></i>Showtimes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Tickets" asp-action="Index">
                                <i class="fas fa-ticket-alt me-1"></i>Tickets
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Admin Sidebar -->
    <div class="admin-container">
        <aside class="admin-sidebar">
            <div class="sidebar-header">
                <h5><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h5>
            </div>
            <nav class="sidebar-nav">
                <a asp-area="Admin" asp-controller="Movies" asp-action="Index" class="sidebar-link">
                    <i class="fas fa-film"></i> Movies Management
                </a>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="sidebar-link">
                    <i class="fas fa-tags"></i> Categories
                </a>
                <a asp-area="Admin" asp-controller="Theaters" asp-action="Index" class="sidebar-link">
                    <i class="fas fa-building"></i> Theaters
                </a>
                <a asp-area="Admin" asp-controller="Showtimes" asp-action="Index" class="sidebar-link">
                    <i class="fas fa-clock"></i> Showtimes
                </a>
                <a asp-area="Admin" asp-controller="Tickets" asp-action="Index" class="sidebar-link">
                    <i class="fas fa-ticket-alt"></i> Tickets
                </a>
                <hr>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-link">
                    <i class="fas fa-home"></i> Back to Website
                </a>
            </nav>
        </aside>

        <main class="admin-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
