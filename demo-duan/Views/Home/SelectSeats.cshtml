@model demo_duan.Models.Showtime
@{
    ViewData["Title"] = "Chọn ghế";
    var bookedSeats = ViewBag.BookedSeats as List<string> ?? new List<string>();
    var movieTitle = Model.Movie?.Title ?? "Phim không xác định";
    var theaterName = Model.Cinema?.Theater?.Name ?? "Rạp không xác định";
    var cinemaName = Model.Cinema?.Name ?? "Phòng chiếu không xác định";
    var rows = Model.Cinema?.Rows ?? 10;
    var seatsPerRow = Model.Cinema?.SeatsPerRow ?? 10;
    var rowLetters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
}

<div class="container mt-5 mb-5">
    <!-- Booking Progress -->
    <div class="booking-progress mb-4">
        <div class="progress-step completed">
            <div class="step-number">1</div>
            <div class="step-text">Chọn phim</div>
        </div>
        <div class="progress-connector completed"></div>
        
        <div class="progress-step completed">
            <div class="step-number">2</div>
            <div class="step-text">Chọn suất chiếu</div>
        </div>
        <div class="progress-connector completed"></div>
        
        <div class="progress-step active">
            <div class="step-number">3</div>
            <div class="step-text">Chọn ghế</div>
        </div>
        <div class="progress-connector"></div>
        
        <div class="progress-step">
            <div class="step-number">4</div>
            <div class="step-text">Thanh toán</div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card seat-selection-card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-chair me-2"></i>Chọn ghế ngồi</h5>
                </div>
                <div class="card-body">
                    <div class="showtime-info mb-4">
                        <div class="row">
                            <div class="col-md-7">
                                <h5>@movieTitle</h5>
                                <p class="mb-0">
                                    <i class="fas fa-building me-2"></i>@theaterName<br>
                                    <i class="fas fa-door-open me-2"></i>@cinemaName
                                </p>
                            </div>
                            <div class="col-md-5 text-md-end">
                                <p class="mb-0">
                                    <i class="fas fa-calendar me-2"></i>@Model.ShowDate.ToString("dd/MM/yyyy")<br>
                                    <i class="fas fa-clock me-2"></i>@Model.ShowTime.ToString(@"hh\:mm")
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="seat-selection-area">
                        <div class="screen mb-4">
                            <div class="screen-label">MÀN HÌNH</div>
                        </div>
                        
                        <div class="seats-container">
                            @for (int i = 0; i < rows; i++)
                            {
                                char rowChar = rowLetters[i];
                                <div class="seat-row mb-2">
                                    <span class="row-label">@rowChar</span>
                                    @for (int j = 1; j <= seatsPerRow; j++)
                                    {
                                        var seatNumber = $"{rowChar}{j}";
                                        var isBooked = bookedSeats.Contains(seatNumber);
                                        <button type="button" 
                                                class="seat-btn @(isBooked ? "booked" : "available")" 
                                                data-seat="@seatNumber"
                                                @(isBooked ? "disabled" : "")>
                                            @j
                                        </button>
                                    }
                                </div>
                            }
                        </div>
                        
                        <div class="seat-legend mt-4">
                            <div class="legend-item">
                                <button type="button" class="seat-btn available" disabled></button>
                                <span>Ghế trống</span>
                            </div>
                            <div class="legend-item">
                                <button type="button" class="seat-btn selected" disabled></button>
                                <span>Đang chọn</span>
                            </div>
                            <div class="legend-item">
                                <button type="button" class="seat-btn booked" disabled></button>
                                <span>Đã đặt</span>
                            </div>
                        </div>
                    </div>
                    
                    <form id="seatsForm" method="post" action="/Home/Payment">
                        <input type="hidden" name="showtimeId" value="@Model.Id">
                        <input type="hidden" name="selectedSeats" id="selectedSeatsInput">
                        
                        <div class="seat-selection-info mt-4">
                            <div class="alert alert-info">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <div id="selectedSeatsDisplay">Chưa chọn ghế nào</div>
                                        <div id="selectionHint" class="small text-muted mt-1">
                                            Vui lòng chọn ghế (tối đa 8 ghế)
                                        </div>
                                    </div>
                                    <div>
                                        <button type="submit" id="continueButton" class="btn btn-primary" disabled>
                                            <i class="fas fa-arrow-right me-2"></i>Tiếp tục
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="mb-3"><i class="fas fa-info-circle text-info me-2"></i>Lưu ý khi chọn ghế</h6>
                    <ul class="small mb-0">
                        <li>Bạn có thể chọn tối đa 8 ghế trong một lần đặt</li>
                        <li>Giá vé có thể thay đổi tùy theo loại ghế</li>
                        <li>Ghế đã đặt không thể hủy hoặc thay đổi</li>
                        <li>Để có trải nghiệm xem phim tốt nhất, nên chọn ghế ở giữa</li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card booking-summary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Thông tin đặt vé</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Movie?.Img))
                    {
                        <img src="@Model.Movie.Img" class="img-fluid rounded mb-3" alt="@movieTitle">
                    }
                    
                    <h5>@movieTitle</h5>
                    <p class="mb-3 text-muted small">
                        <i class="fas fa-film me-2"></i>@(Model.Movie?.Category?.Name ?? "Chưa phân loại")<br>
                        <i class="fas fa-clock me-2"></i>@(Model.Movie?.Duration ?? 0) phút
                    </p>
                    
                    <div class="d-flex justify-content-between py-2 border-bottom">
                        <span>Rạp:</span>
                        <span>@theaterName</span>
                    </div>
                    <div class="d-flex justify-content-between py-2 border-bottom">
                        <span>Phòng:</span>
                        <span>@cinemaName</span>
                    </div>
                    <div class="d-flex justify-content-between py-2 border-bottom">
                        <span>Ngày chiếu:</span>
                        <span>@Model.ShowDate.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="d-flex justify-content-between py-2 border-bottom">
                        <span>Giờ chiếu:</span>
                        <span>@Model.ShowTime.ToString(@"hh\:mm")</span>
                    </div>
                    <div class="d-flex justify-content-between py-2 border-bottom">
                        <span>Giá vé:</span>
                        <span>@Model.Price.ToString("N0") đ</span>
                    </div>
                    
                    <div class="summary mt-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Ghế đã chọn:</span>
                            <span id="summarySelectedSeats">-</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Số lượng:</span>
                            <span id="summaryQuantity">0</span>
                        </div>
                        <div class="d-flex justify-content-between total-price">
                            <span class="fw-bold">Tổng tiền:</span>
                            <span class="fw-bold text-primary" id="summaryTotal">0 đ</span>
                        </div>
                    </div>
                    
                    <div class="d-grid mt-3">
                        <button type="button" class="btn btn-primary" onclick="document.getElementById('seatsForm').submit()" id="paymentButton" disabled>
                            <i class="fas fa-credit-card me-2"></i>Tiến hành thanh toán
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const seatButtons = document.querySelectorAll('.seat-btn.available');
            const selectedSeatsInput = document.getElementById('selectedSeatsInput');
            const selectedSeatsDisplay = document.getElementById('selectedSeatsDisplay');
            const selectionHint = document.getElementById('selectionHint');
            const continueButton = document.getElementById('continueButton');
            const paymentButton = document.getElementById('paymentButton');
            const summarySelectedSeats = document.getElementById('summarySelectedSeats');
            const summaryQuantity = document.getElementById('summaryQuantity');
            const summaryTotal = document.getElementById('summaryTotal');
            const ticketPrice = @Model.Price;
            
            let selectedSeats = [];
            
            seatButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const seatId = this.dataset.seat;
                    
                    if (this.classList.contains('selected')) {
                        // Deselect seat
                        this.classList.remove('selected');
                        this.classList.add('available');
                        selectedSeats = selectedSeats.filter(seat => seat !== seatId);
                    } else {
                        // Select seat (max 8 seats)
                        if (selectedSeats.length < 8) {
                            this.classList.remove('available');
                            this.classList.add('selected');
                            selectedSeats.push(seatId);
                        } else {
                            alert('Bạn chỉ có thể chọn tối đa 8 ghế cho một lần đặt.');
                        }
                    }
                    
                    updateBookingSummary();
                });
            });
            
            function updateBookingSummary() {
                // Update form input
                selectedSeatsInput.value = selectedSeats.join(',');
                
                // Update displays
                if (selectedSeats.length > 0) {
                    selectedSeatsDisplay.innerHTML = `<strong>Ghế đã chọn:</strong> ${selectedSeats.join(', ')}`;
                    summarySelectedSeats.textContent = selectedSeats.join(', ');
                    selectionHint.innerHTML = `<i class="fas fa-check-circle text-success"></i> Đã chọn ${selectedSeats.length} ghế`;
                } else {
                    selectedSeatsDisplay.textContent = 'Chưa chọn ghế nào';
                    summarySelectedSeats.textContent = '-';
                    selectionHint.innerHTML = 'Vui lòng chọn ghế (tối đa 8 ghế)';
                }
                
                // Update quantity and total
                summaryQuantity.textContent = selectedSeats.length;
                const totalAmount = selectedSeats.length * ticketPrice;
                summaryTotal.textContent = `${totalAmount.toLocaleString('vi-VN')} đ`;
                
                // Enable/disable buttons
                const hasSelectedSeats = selectedSeats.length > 0;
                continueButton.disabled = !hasSelectedSeats;
                paymentButton.disabled = !hasSelectedSeats;
            }
        });
    </script>
    
    <style>
        /* Seat selection styling */
        .seat-selection-card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .screen {
            background: linear-gradient(to bottom, #333, #666);
            color: white;
            text-align: center;
            padding: 15px;
            border-radius: 10px 10px 0 0;
            margin: 0 20px;
            position: relative;
        }
        
        .screen::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 100%;
            height: 10px;
            background: rgba(0,0,0,0.1);
        }
        
        .screen-label {
            font-weight: bold;
            font-size: 18px;
        }
        
        .seats-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 20px;
        }
        
        .seat-row {
            display: flex;
            align-items: center;
            margin-bottom: 5px;
        }
        
        .row-label {
            width: 30px;
            text-align: center;
            font-weight: bold;
            color: #6c757d;
        }
        
        .seat-btn {
            width: 35px;
            height: 35px;
            margin: 0 3px;
            border-radius: 8px 8px 0 0;
            border: none;
            background-color: #e9ecef;
            color: #212529;
            font-size: 12px;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .seat-btn.available {
            background-color: #28a745;
            color: white;
        }
        
        .seat-btn.selected {
            background-color: #007bff;
            color: white;
            transform: scale(1.1);
        }
        
        .seat-btn.booked {
            background-color: #dc3545;
            color: white;
            cursor: not-allowed;
            opacity: 0.7;
        }
        
        .seat-btn.available:hover {
            transform: scale(1.1);
        }
        
        .seat-legend {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }
        
        .legend-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
        }
        
        .legend-item .seat-btn {
            width: 25px;
            height: 25px;
            font-size: 10px;
        }
        
        /* Booking summary */
        .booking-summary {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .booking-summary img {
            max-height: 200px;
            object-fit: cover;
        }
        
        .total-price {
            padding-top: 10px;
            border-top: 1px dashed #dee2e6;
            margin-top: 10px;
            font-size: 18px;
        }
        
        /* Booking Progress */
        .booking-progress {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }
        
        .progress-step {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            flex: 1;
        }
        
        .step-number {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #e9ecef;
            color: #6c757d;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: bold;
            margin-bottom: 5px;
            transition: all 0.3s ease;
        }
        
        .step-text {
            font-size: 0.9rem;
            color: #6c757d;
            text-align: center;
        }
        
        .progress-connector {
            flex-grow: 1;
            height: 3px;
            background-color: #e9ecef;
            margin: 0 10px;
            position: relative;
            top: -15px;
        }
        
        .progress-step.completed .step-number {
            background-color: var(--bs-success);
            color: white;
        }
        
        .progress-step.active .step-number {
            background-color: var(--bs-primary);
            color: white;
            transform: scale(1.2);
        }
        
        .progress-connector.completed {
            background-color: var(--bs-success);
        }
    </style>
}