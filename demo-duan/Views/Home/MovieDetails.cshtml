@model demo_duan.Models.Movie
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Img" alt="@Model.Title" class="img-fluid rounded">
        </div>
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <p><strong>Thể loại:</strong> @(Model.Category?.Name ?? "Chưa phân loại")</p>
            <p><strong>Thời lượng:</strong> @Model.Duration phút</p>
            <p><strong>Ngày phát hành:</strong> @Model.ReleaseDate.ToString("dd/MM/yyyy")</p>
            <p><strong>Giá vé:</strong> @Model.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</p>
            <p><strong>Mô tả:</strong> @Model.Description</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Your scripts here
    </script>
}