@model string

<div class="alert alert-danger">
    <i class="fas fa-exclamation-triangle me-2"></i>Lỗi khi tải lịch chiếu
    @if (!string.IsNullOrEmpty(Model))
    {
        <details class="mt-2">
            <summary>Chi tiết lỗi</summary>
            <div class="small text-danger mt-1">@Model</div>
        </details>
    }
    <div class="mt-2">
        <button type="button" class="btn btn-sm btn-outline-danger" onclick="retryLoadShowtimes()">
            <i class="fas fa-sync-alt me-1"></i>Thử lại
        </button>
    </div>
</div>